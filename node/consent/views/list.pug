extends layout

block content
  .container-fluid
    h1 Your information
    div
      table.table.table-hover
        thead
          tr
            th Field
            th Value
        tbody
          tr
            td User Ethereum Account
            td= user.coinbase
          tr
            td User Ethereum Account balance [ether]
            td= balance
          tr
            td User Consent File
            if (user.consents)
              td= user.consents
            if (!user.consents)
              td Mining in progress
    h1 Your consents
    div
      table.table.table-hover
        thead
          tr
            th(width="30%") Contract
            th(width="10%") Company
            th(width="50%") Title
            th(width="5%") Version
            th(width="5%") Status
        tbody
          each val in consents
            tr
              td
                a(href='/consent/'+val.id) #{val.id}
              td= val.company
              td= val.title
              td= val.version
              td= val.status
